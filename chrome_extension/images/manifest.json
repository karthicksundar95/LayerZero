{
    "manifest_version": 3,
    "name": "Privacy Shield",
    "version": "1.0",
    "description": "Protect your privacy with AI-powered text sanitization",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:5000/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Privacy Shield",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    }
  }